<Window x:Class="GetProcessesProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ScrollViewer.HorizontalScrollBarVisibility="Auto" 
        ScrollViewer.VerticalScrollBarVisibility="Auto">
    <Grid>
        <TabControl>
            <TabItem Header="Processes and threads" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <DataGrid Name="ProcessesDataGrid"></DataGrid>
                    <DataGrid Name="ThreadsDataGrid"></DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="DLLs">
                <StackPanel>
                    <DataGrid Name="dllDataGrid"></DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Domains">
                <StackPanel>
                    <DataGrid Name="DomainInfoGrid"></DataGrid>
                </StackPanel>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
