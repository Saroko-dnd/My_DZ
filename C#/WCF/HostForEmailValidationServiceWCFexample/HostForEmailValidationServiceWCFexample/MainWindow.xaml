<Window x:Class="HostForEmailValidationServiceWCFexample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HostForEmailValidationServiceWCFexample"
        Title="MainWindow" Height="350" Width="525" Name="HostMainWindow">
    <Window.Resources>
        <local:WidthHeightConverter x:Key="WidthHeightConverter"></local:WidthHeightConverter>
    </Window.Resources>
    <TextBox BorderThickness="1" BorderBrush="DarkGreen" Height="{Binding ElementName=HostMainWindow, Path=ActualHeight, Converter={StaticResource WidthHeightConverter}}" Width="{Binding ElementName=HostMainWindow, Path=ActualWidth, Converter={StaticResource WidthHeightConverter}}" Name="ConsoleTextBox" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
        
    </TextBox>
</Window>
